@import '../../animation.wxss';
@import '../../main.wxss';
.userinfo{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin-top: 100rpx;
  border-radius: 50%;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.3)
}

.userinfo-nickname {
  color: #aaa;
  margin-top: 30rpx;
  text-align: center;
}

.box1{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
 
 .title{
  font-family: 'LiSu';
  font-size: 25px;
  color:#00bfff;
}


.toast-input{
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  border: 1px solid #ddd;
  height: 200rpx
}


.box{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  border: 0.5px grey solid;
  box-shadow: #ccc 0px 0px 10px;
  margin-top: 30rpx;
  width:90%;
  height: 200rpx;
  margin-left: 5%;
}

.container1{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 20rpx;
}

.picture{
  width: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.text1{
  color: white;
  font-size: 40rpx;
  font-family: '微软雅黑';
  margin-top: 40rpx;
  margin-left: 20rpx;
}

.text2{
  color: white;
  font-size: 30rpx;
  font-family: '微软雅黑';
  margin-top: 30rpx;
  margin-left: 30rpx;
}
