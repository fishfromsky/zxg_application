@import "../../animation.wxss";
.userinfo{
  width: 100%;
  height: 250rpx;
  background-color: #00bfff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin-top: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
  margin-top: 30rpx;
  text-align: center;
}

.container1 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 20px;
  margin-right: 20px;
  line-height: 2em;
}

.container2 {
  display: flex;
  flex-direction: row;
  justify-content: center;
  line-height: 2em;
}

.container3 {
  background-color: #cdcdcd;
  line-height: 1.5em;
  margin-left: 20px;
  margin-right: 20px;
}

.container4 {
  background-color: white;
  color: white;
  line-height: 1em;
}

.usermotto {
  margin-top: 100rpx;
  font-size: 10pt bold;
  text-align: center;
  font-family: '宋体';
}

.xiaofeiButton{
  background-color:#333333;
  width:90%;
  align-items: center;
  margin-top: 40rpx;
  color: white;
  border-radius: 0px;
}

.flex1{
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 20rpx;
}
.fapiao{
  margin-left: 20rpx;
  background-color: #2f2f2f;
  color: white
}
.zhifu{
  margin-right:-45rpx;
  background-color:#2ec6e0;
  line-height: 1.5em;
  align-items: center;
  border-radius: 0px;
  font-size: 9pt bold;
}
.bg-blue{
  background-color: #00bfff;
	color: var(--white);
}
.picture{
  width: 100%
}
.gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;
}


