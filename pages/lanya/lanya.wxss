@import '../../main.wxss';
@import '../../animation.wxss';
.title{
  text-align: center;
  font-family: 'LiSu';
  font-size: 25px;
  color: #00bfff;
}

.box1{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border: gray 1px solid;
}

.box2{
  display: flex;
  flex-direction: column;
  align-content: cneter;
}
.picture{
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.Temperature{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.Wendu{
  width: 90%;
  background-color: #333333;
  color: white;
  border-radius: 0px;
}
.toast-box{
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 1000;
}
.toastbg{
  opacity: 0.5;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}
.ShowToast{
  position: absolute;
  opacity: 1;
  width: 70%;
  margin-left: 15%;
  margin-top: 40%;
}
.toast-title{
  padding-left: 5%;
  background-color: #2196f3;
  color: white;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
  display: flex;
  justify-content: center;
}
.ToastMain{
  padding-top: 2vh;
  padding-bottom: 2vh;
  background-color: white;
  text-align: center;
}
.toast-button{
  display: flex
}
.button1{
  width:50%
}
.button2{
  width: 50%
}
.button1 button{
  width: 100%;
  background-color: white;
  color: red;
  border-top: 1px grey solid;
  border-bottom: 1px grey solid;
  border-right: 1px grey solid;
  border-radius: 0px;
}

.button2 button{
  width: 100%;
  background-color: white;
  color: black;
  border-top: grey 1px solid;
  border-bottom: 1px grey solid;
  border-radius: 0px;
}
.Wendu1{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.text1{
  margin-left: 20rpx;
}
.text2{
  color: #ffa500;
  margin-right: 40rpx;
}
.Adjust{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.button3{
  margin-left: 30rpx;
  background-color: #efefef;
  color: black;
  border-radius: 0px;
}
.button4{
  margin-right: 30rpx;
  background-color: #efefef;
  color: black;
  border-radius: 0px;
}
.object{
  border-top:1rpx solid #cdcdcd;
  overflow:hidden;
}
.container{
  position:relative;
  float:left;
  padding:20px 10px;
  width:33.33333333%;
  box-sizing:border-box;
  border-right: 1rpx solid #cdcdcd;
  border-bottom: 1rpx solid #cdcdcd;
}
.icon{
  display: inline-block;
  width: 90rpx;
  height: 90rpx;
}
.texting{
  text-align: center;
  font-size: 14px;
  margin-top: 20rpx;
}
.EndUse{
  width: 60%;
  background: linear-gradient(to right, #a1c4fd, #c2e9fb);
  margin-left: 20%;
  margin-top: 50rpx;
  border-radius: 20px;
  color: #6633FF
}