<view class="i-class i-checkbox" catchtap="checkboxChange">
    <i-cell i-class="i-checkbox-cell">
        <label>
            <radio value="{{value}}" checked="{{checked}}" color="{{checked?color:'#2d8cf0'}}" disabled="{{disabled}}" class="i-checkbox-radio {{positionCls}}" />
            <view class="i-checkbox-title">{{value}}</view>
        </label>
    </i-cell>
</view>
